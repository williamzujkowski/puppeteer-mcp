# Environment
NODE_ENV=development

# Server Configuration
PORT=8443
HOST=0.0.0.0

# TLS Configuration
TLS_ENABLED=true
TLS_CERT_PATH=/path/to/cert.pem
TLS_KEY_PATH=/path/to/key.pem
TLS_CA_PATH=/path/to/ca.pem
TLS_MIN_VERSION=TLSv1.2

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
AUDIT_LOG_ENABLED=true
AUDIT_LOG_PATH=./logs/audit

# Security - JWT
JWT_SECRET=your-super-secret-jwt-key-min-32-chars-long
JWT_EXPIRY=24h
JWT_REFRESH_EXPIRY=7d
JWT_ALGORITHM=HS512
BCRYPT_ROUNDS=12

# Session Configuration
SESSION_TIMEOUT=1800000
SESSION_ABSOLUTE_TIMEOUT=43200000
SESSION_RENEWAL_THRESHOLD=300000

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false
RATE_LIMIT_SKIP_FAILED_REQUESTS=false

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/puppeteer_mcp
DATABASE_SSL=true
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis
REDIS_URL=redis://localhost:6379
REDIS_TLS=true
REDIS_KEY_PREFIX=mcp:

# CORS
CORS_ORIGIN=http://localhost:3000,https://example.com
CORS_CREDENTIALS=true
CORS_MAX_AGE=86400

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# gRPC Configuration
GRPC_PORT=50051
GRPC_MAX_RECEIVE_MESSAGE_SIZE=4194304
GRPC_MAX_SEND_MESSAGE_SIZE=4194304

# WebSocket Configuration
WS_PATH=/ws
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_PAYLOAD=1048576

# Security Headers
HSTS_MAX_AGE=31536000
CSP_DIRECTIVES=default-src 'self'; script-src 'self' 'unsafe-inline'

# Puppeteer Configuration
PUPPETEER_EXECUTABLE_PATH=
PUPPETEER_HEADLESS=true
PUPPETEER_ARGS=
BROWSER_POOL_MAX_SIZE=5
BROWSER_IDLE_TIMEOUT=300000
PUPPETEER_DOWNLOAD_PATH=
PUPPETEER_CACHE_ENABLED=true