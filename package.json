{
  "name": "puppeteer-mcp",
  "version": "1.0.0",
  "description": "AI-enabled browser automation platform with REST, gRPC, WebSocket, and MCP interfaces, featuring enterprise Puppeteer integration",
  "type": "module",
  "main": "dist/server.js",
  "types": "dist/server.d.ts",
  "bin": {
    "puppeteer-mcp": "dist/mcp/start-mcp.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "tsc",
    "dev": "nodemon --exec tsx src/server.ts",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:e2e": "jest --testPathPattern=tests/e2e",
    "test:benchmark": "jest --testPathPattern=tests/benchmark",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "security:check": "node scripts/security-check.js",
    "standards:check": "node scripts/standards-check.js",
    "docs:serve": "mkdocs serve",
    "docs:build": "mkdocs build",
    "docs:deploy": "mkdocs gh-deploy --force",
    "prepare": "node -e \"try{if(!require('is-ci')) require('child_process').execSync('husky install',{stdio:'inherit'})}catch(e){}\"",
    "prepublishOnly": "npm run build && npm run test",
    "pre-commit": "npm run lint:fix && npm run format && npm run typecheck",
    "mcp": "node dist/mcp/start-mcp.js"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "claude",
    "api",
    "rest",
    "grpc",
    "websocket",
    "puppeteer",
    "browser-automation",
    "web-scraping",
    "typescript",
    "node",
    "ai-agents",
    "browser-pool",
    "llm",
    "ai"
  ],
  "author": "William Zujkowski <williamzujkowski@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/williamzujkowski/puppeteer-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/williamzujkowski/puppeteer-mcp/issues"
  },
  "homepage": "https://williamzujkowski.github.io/puppeteer-mcp/",
  "license": "MIT",
  "dependencies": {
    "@grpc/grpc-js": "^1.9.13",
    "@grpc/proto-loader": "^0.7.10",
    "@modelcontextprotocol/sdk": "^1.13.3",
    "@types/puppeteer": "^5.4.7",
    "@types/uuid": "^10.0.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "express-rate-limit": "^7.1.5",
    "helmet": "^8.1.0",
    "is-ci": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "pino": "^9.7.0",
    "puppeteer": "^24.11.2",
    "puppeteer-core": "^24.11.2",
    "uuid": "^11.1.0",
    "ws": "^8.16.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^24.0.10",
    "@types/supertest": "^6.0.2",
    "@types/ws": "^8.5.10",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-security": "^3.0.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.1.2",
    "nodemon": "^3.0.2",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.1.1",
    "supertest": "^7.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.1"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
